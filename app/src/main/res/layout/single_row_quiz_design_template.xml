<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="10dp"
    android:elevation="50dp"
    >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/constraintLayout1Id"
            android:background="#03A9F4"
            >

            <TextView
                android:id="@+id/singleRowQuizTitileId"
                android:layout_width="0dp"
                android:layout_marginLeft="11dp"
                android:layout_height="wrap_content"
                android:text="title"
                android:padding="5dp"
                android:textColor="#FFFDFD"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />


        </androidx.constraintlayout.widget.ConstraintLayout>





        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2Id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#FFFFFF"

            >

            <TextView
                android:id="@+id/singleRowQuizQuestionId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="question"
                android:layout_marginLeft="5dp"

                android:textColor="#000000"

                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/singleRowQuizRadioGroupId"
                app:layout_constraintEnd_toEndOf="parent
"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup

                android:id="@+id/singleRowQuizRadioGroupId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/singleRowQuizQuestionId">

                <RadioButton
                    android:id="@+id/singleRowQuizRadioButton1Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Radio"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/singleRowQuizRadioButton2Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Radio"
                    android:textSize="14sp"

                    />

                <RadioButton
                    android:id="@+id/singleRowQuizRadioButton3Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Radio"
                    android:textSize="14sp"

                    />

                <RadioButton
                    android:id="@+id/singleRowQuizRadioButton4Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Radio"
                    android:textSize="14sp"

                    />
            </RadioGroup>

            <Button
                android:id="@+id/singleRowQuizSubmitButtonId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/singleRowQuizRadioGroupId"
                app:layout_constraintTop_toBottomOf="@+id/singleRowQuizRadioGroupId"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>







    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.cardview.widget.CardView>