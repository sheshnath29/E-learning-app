<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0EAF8"
    tools:context=".adminpanel.AdminPanelCreateQuizActivity">


   <!--

   <FrameLayout
        android:id="@+id/frameLayoutContainerId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigationId"


        />
   -->



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:nestedScrollingEnabled="true"
        android:background="@drawable/radius_for_admin_panel"
        android:focusableInTouchMode="true"

        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBarId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#03A9F4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:title="Create Quiz"
            app:titleTextColor="#EBE6E6"

            />




        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/adminCreateQuizTitleId"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="22dp"
            android:hint="Quiz title"

            android:textColorHint="#9BA6B6"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolBarId"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/adminCreateQuizTitleEditTextId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/adminCreateQuizQuestionId"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="22dp"
            android:hint="Write your question here"
            android:textColorHint="#9BA6B6"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adminCreateQuizTitleId">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/adminCreateQuizQuestionEditTextId"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/adminCreateQuizOption1Id"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="22dp"
            android:hint="Option 1"
            android:textColorHint="#9BA6B6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adminCreateQuizQuestionId">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/adminCreateQuizOption1EditTextId"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/adminCreateQuizOption2Id"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="22dp"
            android:hint="Option 2"
            android:textColorHint="#9BA6B6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adminCreateQuizOption1Id">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/adminCreateQuizOption2EditTextId"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/adminCreateQuizOption3Id"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="22dp"
            android:hint="Option 3"
            android:textColorHint="#9BA6B6"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adminCreateQuizOption2Id">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/adminCreateQuizOption3EditTextId"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/adminCreateQuizOption4Id"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="22dp"
            android:hint="Option 4"
            android:textColorHint="#9BA6B6"

            app:layout_constraintTop_toBottomOf="@id/adminCreateQuizOption3Id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/adminCreateQuizOption4EditTextId"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/adminCreateQuizCorrectAnswerId"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="22dp"
            android:hint="Correct answer"
            android:textColorHint="#9BA6B6"

            app:layout_constraintTop_toBottomOf="@id/adminCreateQuizOption4Id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/adminCreateQuizCorrectAnswerEditTextId"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/adminCreateQuizButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Create"
            android:layout_marginTop="5dp"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adminCreateQuizCorrectAnswerId" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#03A9F4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"


            app:menu="@menu/icon_menu_admin" />

        <ImageView
            android:id="@+id/vectorIconForOption1Id"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/adminCreateQuizOption1Id"
            app:layout_constraintEnd_toStartOf="@+id/adminCreateQuizOption1Id"
            app:layout_constraintTop_toTopOf="@+id/adminCreateQuizOption1Id"
            app:srcCompat="@drawable/accepted"
            app:tint="#9BA6B6" />


        <ImageView
            android:id="@+id/vectorIconForOption2Id"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/adminCreateQuizOption2Id"
            app:layout_constraintEnd_toStartOf="@+id/adminCreateQuizOption2Id"
            app:layout_constraintTop_toTopOf="@+id/adminCreateQuizOption2Id"
            app:srcCompat="@drawable/accepted"
            app:tint="#9BA6B6" />




        <ImageView
            android:id="@+id/vectorIconForOption3Id"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/adminCreateQuizOption3Id"
            app:layout_constraintEnd_toStartOf="@+id/adminCreateQuizOption3Id"
            app:layout_constraintTop_toTopOf="@+id/adminCreateQuizOption3Id"
            app:srcCompat="@drawable/accepted"
            app:tint="#9BA6B6" />




        <ImageView
            android:id="@+id/vectorIconForOption4Id"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/adminCreateQuizOption4Id"
            app:layout_constraintEnd_toStartOf="@+id/adminCreateQuizOption4Id"
            app:layout_constraintTop_toTopOf="@+id/adminCreateQuizOption4Id"
            app:srcCompat="@drawable/accepted"
            app:tint="#9BA6B6" />


        <ImageView
            android:id="@+id/vectorIconForCorrectAnswerId"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/adminCreateQuizCorrectAnswerId"
            app:layout_constraintEnd_toStartOf="@+id/adminCreateQuizCorrectAnswerId"
            app:layout_constraintTop_toTopOf="@+id/adminCreateQuizCorrectAnswerId"
            app:srcCompat="@drawable/accepted"
            app:tint="#9BA6B6" />


    </androidx.constraintlayout.widget.ConstraintLayout>














</androidx.appcompat.widget.LinearLayoutCompat>